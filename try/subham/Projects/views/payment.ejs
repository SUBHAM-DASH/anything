                </svg>
                <h2>Select a Payment Method</h2>
            </nav>
            <form action="/ordered" method="post">
                <h3>Your name</h3>
                <input type="text" name="name" placeholder="Enter your name...">
                <h3>Credit card details</h3>
                <input type="number" name="credit_number" placeholder="Enter the creditcard number...">
                <h3>card exp.month</h3>
                <input type="number" name="card_exp_month" placeholder="Enter the card expire month...">
                <h3>card exp.year</h3>
                <input type="number" name="card_exp_year" placeholder="Enter the card expire year...">
                <h3>cvv</h3>
                <input type="number" name="cvv" placeholder="Enter the cvv...">
                <div class="text-center my-4">
                    <button class="btn btn-warning rounded-pill" style="width:450px;"><b>Continue</b></button>
                </div>
            </form>
            <nav class="navbar cls text-light">
                <i class="fa fa-cc-visa" style="font-size:48px;color:white"></i>
                <i class="fa fa-cc-mastercard" style="font-size:48px;color:white"></i>
                <i class="fa fa-cc-paypal" style="font-size:48px;color:white"></i>
                <i class="fa fa-cc-stripe" style="font-size:48px;color:white"></i>
                <i class="fa fa-cc-jcb" style="font-size:48px;color:white"></i>
            </nav> 
        </div>
