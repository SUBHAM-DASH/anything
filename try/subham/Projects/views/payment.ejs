        <style>
            .cls{
                background-color:darkcyan;
            }
            .cls1{
                width:900px;
                margin-top: 8px;
                background-color: rgb(5, 66, 68);
                border-radius: 20px;
            }
            .cls2{
                height:40px;
                font-size:20px;
            }
            form{
                text-align: center;
            }
            input{
                width:50%;
                padding:8px;
                border-radius: 20px;
                border:4px solid black;
            }
            h3{
                color:white;
            }
        </style>
