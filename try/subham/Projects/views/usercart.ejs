<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <title><%= title%></title>
        <script src="/javascript/index.js"></script>
        <style>
            nav{
                height:50px;
                background-color: darkslategray;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 40px;
                color:white;
                text-shadow: 2px 2px 4px #000000;
                z-index: 1;
            }
            .sidenav {
                height: 100%;
                width: 350px;
                position: fixed;
                z-index: 1;
                top: 0;
                left: 0;
                background-color: rgb(78, 193, 197);
                overflow-x: hidden;
                padding-top: 20px;
                color: white;
            }
            .sidenav h2{
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .shadow-lg{
                cursor: pointer;
            }
            .cls{
                width:650px;
                margin-left: 27%;
                height:140px;
            }
            p{
                font-weight: bold;
                margin-top: 30px;
            }
            span b:hover{
                color:mediumblue;
            }
        </style>
    </head>
    <body>
        <nav>
            <span class="material-icons-outlined">
               Your Cart Items
            </span>
        </nav>
        <div class="container-fluid">
            <div class="sidenav">
                <h2>Filters</h2>
                <hr>
                <h4>ORDER STATUS</h4>
                <div class="m-3">
                    <input type="checkbox" name="ontheway">
                    <label>Ontheway</label>
                    <br>
                    <input type="checkbox" name="delivered">
                    <label>Delivered</label>
                    <br>
                    <input type="checkbox" name="cancelled">
                    <label>Cancelled</label>
                    <br>
                    <input type="checkbox" name="returned">
                    <label>Returned</label>
                </div>
                <h4>ORDER TIME</h4>
                <div class="m-3">
                    <input type="checkbox" name="last30days">
                    <label>Last 30 days</label>
                    <br>
                    <input type="checkbox" name="nbr1">
                    <label>2020</label>
                    <br>
                    <input type="checkbox" name="nbr2">
                    <label>2019</label>
                    <br>
                    <input type="checkbox" name="older">
                    <label>Older</label>
                </div>
            </div>
            <%user.forEach((i)=>{ %>
            <div class="shadow-lg my-4 cls" style="height:200px">
                <div class="d-flex">
                    <img src="/static/<%= i.image%>" height="120" width="120">
                    <h3 class="margin-left:50px"><%= i.product_name%></h3>
                    <p style="margin-left: 6%;"><%= i.product_detail%></p>
                </div>
                <a href="/payment"><span style="margin-left: 24%; color:indianred;text-shadow: 1px 1px;"><b>BUYNOW</b></span></a>
                <a href="/remove/<%= i.sl_no%>"><span style="margin-left: 5%; color:indianred;text-shadow: 1px 1px;"><b>REMOVE</b></span></a>
            </div>
            <% });%>
        </div>
        <!-- Optional JavaScript; choose one of the two! -->
        <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
        <!-- Option 2: Separate Popper and Bootstrap JS -->
        <!--
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
        -->
    </body>
</html>
