<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <title><%= title%></title>
        <script src="/javascript/index.js"></script>
        <style>
            .cls{
                width:800px;
                margin-top: 30px;
            }
            img{
              max-height: 390px;
            }
        </style>
    </head>
    <body>
        <div class="container cls shadow-md">
            <div class="card mb-3" style="max-width: 740px;">
              <%user.forEach((user)=>{ %>
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="/static/<%= user.image%>" class="img-fluid rounded-start" alt="image not available" width="250" height="250">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h3><%= user.product_name%></h3>
                      <h6 class="card-title"><%= user.product_details%></h6>
                      <span class="text-primary"><b>brand:<%= user.cetegory_name%></b></span>
                      |
                      <span class="text-primary"><b>144,677 ratings</b></span>
                      <hr>
                      <p class="text-primary"><b>M.R.P :<del>₹<%= user.price%></del></b></p>  
                      <p><b>Deal of the day : <span style="font-size: 20px;" class="text-danger">₹<%= user.price-(20/100*user.price).toFixed(0)%>/-</span></b></p>
                      <p>You save :<span style="font-size: 20px;" class="text-danger">₹<%= (20/100*user.price).toFixed(0)%>/-(20%)</span></p>
                      <p>inclusive all the taxes</p>
                    </div>
                    <a href="/addcart/<%= user.image%>/<%= user.product_name%>/<%= user.product_details%>/<%= user.price%>"><button type="button" class="btn btn-lg btn-info rounded-pill" id="addtocartjvl">Add to cart</button></a>
                    <a href="/payment"><button type="button" class="btn btn-lg btn-info rounded-pill" id="buynow">Buy now</button></a>
                  </div>
                </div>
              <% });%>  
            </div>
        </div>
        <!-- Optional JavaScript; choose one of the two! -->
        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
        <!-- Option 2: Separate Popper and Bootstrap JS -->
        <!--
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
        -->
    </body>
</html>
